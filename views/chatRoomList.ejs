<script defer src="/socket.io/socket.io.js"></script>
<script defer src="/js/socket-client.js"></script>
<h1>RoomList</h1>
<h2>Username: %><%= locals.user.username %></h2>
<h2>UserId: <%= locals.user.id %></h2>
<div class="list-group" id="roomList">
  <% for (const key in locals.rooms) { %>
  <a
    class="list-group-item d-flex justify-content-between align-items-start list-group-item-action"
    href="/chatRoom/<%= key %>"
  >
    <div class="ms-2 me-auto">
      <div class="fw-bold">Subheading roomId: <%= key %></div>
      <%= rooms[key].roomName %>
    </div>
    <span class="badge bg-primary rounded-pill">14</span>
  </a>
  <% }; %>
</div>
<form action="/chatRoom/createRoom" method="POST">
  <input name="roomName" type="text" required />
  <button type="submit">Create New Room</button>
</form>
